{{yield}}
{{#if newListingForm}}
<h4>Add New Listing</h4>
<form>
   <div class="form-group">
     <label for="title">Title</label>
     {{input required value=title id="title"}}
   </div>
   <div class="form-group">
     <label for="price">Price</label>
     {{input required type="number" min="0.00" step="0.01" value=price id="price"}}
   </div>
   <div class="form-group">
     <label for="body">Body</label>
     {{textarea required value=body id="body"}}
   </div>
   <button {{action 'saveListing'}}>Save</button>
 </form>
<button {{action "hideListingForm"}} type="button" name="button">Cancel</button>
{{else}}
<button {{action "showListingForm"}} type="button" name="button">Add Listing</button>
{{/if}}
