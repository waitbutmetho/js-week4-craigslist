
{{#if updateListingForm}}
<h4>Update Listing</h4>
<form>
   <div class="form-group">
     <label for="title">Title</label>
     {{input required value=updateTitle id="title"}}
   </div>
   <div class="form-group">
     <label for="price">Price</label>
     {{input required type="number" min="0.00" step="0.01" value=updatePrice id="price"}}
   </div>
   <div class="form-group">
     <label for="body">Body</label>
     {{textarea required value=updateBody id="body"}}
   </div>
   <button {{action 'updateListing' listing}}>Save</button>
 </form>
<button {{action "hideUpdateListingForm"}} type="button" name="button">Cancel</button>
{{else}}
<button {{action "showUpdateListingForm"}} type="button" name="button">Update Listing</button>
{{/if}}
{{yield}}
